<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>db.driver</param-name>
        <param-value>com.mysql.jdbc.Driver</param-value>
    </context-param>
    <context-param>
        <param-name>db.url</param-name>
        <param-value>jdbc:mysql://localhost:3306/bmagbook</param-value>
    </context-param>
    <context-param>
        <param-name>db.user</param-name>
        <param-value>root</param-value>
    </context-param>
    <context-param>
        <param-name>db.password</param-name>
        <param-value>VoThanhTai016520</param-value>
    </context-param>
    <listener>
        <description>ServletContextListener</description>
        <listener-class>listener.AppListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>ProcessRegister</servlet-name>
        <servlet-class>controller.ProcessRegister</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProcessLogin</servlet-name>
        <servlet-class>controller.ProcessLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProcessNewsFeed</servlet-name>
        <servlet-class>controller.ProcessNewsFeed</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProcessLogout</servlet-name>
        <servlet-class>controller.ProcessLogout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProcessProfile</servlet-name>
        <servlet-class>controller.ProcessProfile</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProcessImage</servlet-name>
        <servlet-class>controller.ProcessImage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UploadImage</servlet-name>
        <servlet-class>controller.UploadImage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FrontController</servlet-name>
        <servlet-class>controller.FrontController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>IndividualProfile</servlet-name>
        <servlet-class>controller.IndividualProfile</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProcessSuggestedFriend</servlet-name>
        <servlet-class>controller.ProcessSuggestedFriend</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProcessFriendList</servlet-name>
        <servlet-class>controller.ProcessFriendList</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProcessRegister</servlet-name>
        <url-pattern>/dang-ky</url-pattern>
        <!--url-pattern là địa chỉ trên url, chúng ta có thể thể sửa lại nhưng phải sửa thêm trong action của form-->
